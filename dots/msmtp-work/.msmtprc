# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /usr/local/etc/openssl/cert.pem
logfile        ~/.msmtp.log

# Gmail
account        datameer
host           smtp.gmail.com
port           587
from           mb@datameer.com
user           mb@datameer.com
passwordeval   "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/z/documents/passwords/Users/mb/Library/Keychains/datameer.keychain/Apps/msmtp.gpg"

# Set a default account
account default : datameer
