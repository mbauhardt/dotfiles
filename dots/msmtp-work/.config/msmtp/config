# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs.pem
logfile        ~/.msmtp.log

# Gmail
account        datameer
host           smtp.gmail.com
port           587
from           mb@datameer.com
user           mb@datameer.com
passwordeval   "pass Apps/isync"

# Set a default account
account default : datameer
